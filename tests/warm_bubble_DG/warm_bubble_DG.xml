  <problem_definition length="long" nprocs="10">
    <command_line>mpiexec ../../bin/flredecomp -i 1 -o 10 warm_bubble_DG warm_bubble_DG_parallel ;
mpiexec ../../bin/fluidity -v3 -l warm_bubble_DG_parallel.flml </command_line>
  </problem_definition>
  <variables>
<!--    <variable name="solvers_converged" language="python">
import os
files = os.listdir("./")
solvers_converged = not "matrixdump" in files and not "matrixdump.info" in files
    </variable> -->
    <variable name="MaximumVelocity" language="python">
import fluidity_tools
MaximumVelocity = fluidity_tools.stat_parser("warm_bubble_DG.stat")['Gas']['Velocity%magnitude']['max'][-1]
    </variable>    
    <variable name="MaximumVelocityStored" language="python">
import fluidity_tools
MaximumVelocityStored = fluidity_tools.stat_parser("stored_warm_bubble_DG.stat")['Gas']['Velocity%magnitude']['max'][-1]
    </variable>
    <variable name="MaximumPotTemp" language="python">
import fluidity_tools
MaximumPotTemp = fluidity_tools.stat_parser("warm_bubble_DG.stat")['Gas']['PotentialTemperature']['max'][-1]
    </variable>    
    <variable name="MaximumPotTempStored" language="python">
import fluidity_tools
MaximumPotTempStored = fluidity_tools.stat_parser("stored_warm_bubble_DG.stat")['Gas']['PotentialTemperature']['max'][-1]
    </variable>
  </variables>
  <pass_tests>
<!--    <test name="Solvers converged" language="python">
      assert(solvers_converged)
    </test> -->
    <test name="Max velocity within 0.1%" language="python">
Err = (abs(MaximumVelocity-MaximumVelocityStored) / MaximumVelocityStored) *100
print Err
assert (Err &lt; 0.1)
    </test>
    <test name="Max pot. temp. within 0.1%" language="python">
Err = (abs(MaximumPotTemp-MaximumPotTempStored) / MaximumPotTempStored) *100
print Err
assert (Err &lt; 0.1)
    </test>
  </pass_tests>
</testproblem>
